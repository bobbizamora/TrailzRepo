@model IEnumerable<trailz.Models.Route>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        @if (this.User.IsInRole("Admin"))
        {
            <h1><i class="fas fa-tachometer-alt"></i> Admin Dashboard Trailz</h1>
        }
        else
        {
            <h1><i class="fas fa-road"></i> My Trailz</h1>
        }
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RouteDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RouteName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Distance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Departure)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Arrival)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Level)
                    </th>
                    <th>
                        Route Type
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RouteDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RouteName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Distance) km
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Departure)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Arrival)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Level.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RouteType.Name)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.RouteID"><i class="fas fa-edit"></i> Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.RouteID"><i class="fas fa-book-open"></i> Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.RouteID"><i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="col-md-3 mb-3">
            <a class="btn btn-primary" asp-action="Create"><i class="fas fa-road"></i> Create a New Route</a>
        </div>
        <div class="col-md-3 mb-3">
            @if (this.User.IsInRole("Admin"))
            {
                <a class="btn btn-secondary" asp-controller="AttributeType" asp-action="Index"><i class="fas fa-list"></i> Menu Route Attributes</a>
            }
        </div>
        <div class="col-md-3 mb-3">
            @if (this.User.IsInRole("Admin"))
            {
                <a class="btn btn-dark" asp-controller="RouteType" asp-action="Index"><i class="fas fa-list"></i> Menu Activity Types</a>
            }
        </div>
    </div>
</div>